<Window x:Class="SCAutoTracer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SCAutoTracer" 
        mc:Ignorable="d"
        Title="MainWindow" 
        SizeToContent="WidthAndHeight"
        MinWidth="300" MaxWidth="400"
        MinHeight="{Binding ElementName=control,Path=ActualHeight, TargetNullValue=160, Mode=OneWay}"
        ResizeMode="CanMinimize">
    <local:ChooseLogFileControl x:Name="control" VerticalAlignment="Top"/>
</Window>
