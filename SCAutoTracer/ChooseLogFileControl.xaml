<UserControl x:Class="SCAutoTracer.ChooseLogFileControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SCAutoTracer"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Margin="0,10,0,10">
        <TextBlock Text="Файл логов" Margin="5"/>
        <TextBox x:Name="logPath" Margin="5" TextWrapping="Wrap"/>
        <Button Content="Выбрать файл" Margin="5" HorizontalAlignment="Left" Click="ShowDialog"/>
        <ContentControl x:Name="nestedContent"  Margin="10"/>
    </StackPanel>
</UserControl>
